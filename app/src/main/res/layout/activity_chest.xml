<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:verticalScrollbarPosition="right"
    tools:context=".Chest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="10000dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250sp"
                android:text="Chest Press"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/alertokchest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/alertWarningChest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/warningAlertChest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/warning" />

            <Button
                android:id="@+id/alertchest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-110dp"
                android:layout_marginRight="150dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/information" />

            <Button
                android:id="@+id/homeChest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-140dp"
                android:background="@drawable/house" />

            <TextView
                android:id="@+id/Step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Step 1)"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Step2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50sp"
                android:text="Step2)"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Step3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50sp"
                android:text="Step3)"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Step4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100sp"
                android:paddingTop="10sp"
                android:text="Step4)"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Step5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="90sp"
                android:text="Step5)"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="-430sp"
            android:paddingBottom="30sp"
            android:text="TextView"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/information1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="0sp"
            android:paddingBottom="30sp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/information2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="5sp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/information3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="35sp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/information4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="10sp"
            android:text="TextView"
            android:textSize="17sp" />


        </LinearLayout>
    </ScrollView>
    <VideoView
        android:id="@+id/videoViewChest"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
</RelativeLayout>