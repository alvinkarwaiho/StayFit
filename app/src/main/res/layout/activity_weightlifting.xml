<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weightlifting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/tricep"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/tricepdips"
                android:text="Tricep dips" />

            <Button
                android:id="@+id/chest"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/chest"
                android:text="Chest" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="Bicep Curl"
                android:id="@+id/curl"
                android:drawableLeft="@drawable/bicepcurls"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:text="Squats"
                android:id="@+id/squats"
                android:background="@drawable/button_shape"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>