<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fitness" />

        <Button
            android:id="@+id/cardio1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"

            android:drawableLeft="@drawable/cardio"
            android:text="Cardio"
            android:textSize="20sp" />

        <Button
            android:id="@+id/weightlifting2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"

            android:drawableLeft="@drawable/weightlifting"
            android:text="Weightlifting"
            android:textSize="20sp" />

        <Button
            android:id="@+id/features"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/additional"
            android:text="Features"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>