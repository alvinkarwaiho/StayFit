<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dip">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msgTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250sp"
            android:text="Tricep Dips"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/alertokdip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/alertdip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:background="@drawable/information" />
        <TextView
            android:id="@+id/Step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Step 1)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Step2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:paddingTop="30sp"
            android:text="Step2)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Step3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80sp"
            android:text="Step3)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Step4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100sp"
            android:paddingTop="10sp"
            android:text="Step4)"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/dips_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="-395sp"
            android:paddingBottom="30sp"
            android:text="TextView"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/dips_information1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="-27dp"
            android:paddingTop="20sp"
            android:paddingBottom="30sp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dips_information2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="10sp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dips_information3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="70sp"
            android:text="TextView"
            android:textSize="17sp" />

        <Button
            android:id="@+id/homeDip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="300dp"
            android:background="@drawable/house" />

    </LinearLayout>
</ScrollView>

    <VideoView
        android:id="@+id/videoViewDip"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
</RelativeLayout>