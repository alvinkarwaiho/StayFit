<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dip">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2FBE7"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/msgTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250sp"
            android:text="Tricep Dips"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/alertokdip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/alertWarningDip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/warningAlertDip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/warning" />

        <Button
            android:id="@+id/alertdip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/information" />

        <Button
            android:id="@+id/homeDip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="300dp"
            android:background="@drawable/house" />

        <TextView
            android:id="@+id/Step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:paddingTop="20dp"
            android:text="Step 1)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Step2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="530dp"
            android:paddingTop="15dp"
            android:text="Step2)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Step3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="600dp"
            android:paddingTop="15dp"
            android:text="Step3)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Step4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="700dp"
            android:text="Step4)"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/dips_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="420dp"
            android:text="TextView"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/dips_information1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="530dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dips_information2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="600dp"
            android:paddingTop="15dp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dips_information3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="700dp"
            android:text="TextView"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="800dp"
            android:text="Reference: https://www.verywellfit.com/the-chair-dip-triceps-exercise-3120734" />

    </RelativeLayout>
</ScrollView>

    <VideoView
        android:id="@+id/videoViewDip"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
</RelativeLayout>